<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFF"
    tools:context="com.msg91.sendotp.sample.login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="219dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/navigate" />

            <TextView
                android:id="@+id/c_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_light"
                android:text="@string/app_name"
                android:textColor="#0D2DE6"
                android:textSize="18sp" />


                <TextView
                    android:id="@+id/editText9"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="70dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:inputType="textPersonName"
                    android:text="Enter your username"
                    android:textColor="#00B8D4" />

                <EditText
                    android:drawableStart="@drawable/ic_group_black_24dp"

                    android:id="@+id/c_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#304FFE"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:hint="   Username"
                    android:inputType="textPersonName"
                    android:textColorHint="#1033FF"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/editText6"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:inputType="textPersonName"
                    android:text="Enter your Password"
                    android:textColor="#00B8D4" />

                <EditText
                    android:id="@+id/c_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#304FFE"
                    android:ems="10"
                    android:drawableStart="@drawable/ic_lock_outline_black_24dp"

                    android:fontFamily="@font/roboto_light"
                    android:hint="  Password"
                    android:inputType="textPassword"
                    android:textColorHint="#1939F1"
                    android:textSize="14sp" />

        <TextView
            android:id="@+id/c_forgotpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/roboto_light"
            android:text="Forgot password?"
            android:textAlignment="viewEnd"
            android:textColor="#304FFE" />

            <Button
                android:id="@+id/c_button"
                android:layout_width="233dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/button"
                android:fontFamily="@font/roboto_light"
                android:text="Employee login"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/u_buttonuser"
                android:layout_width="233dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundbtn"
                android:fontFamily="@font/roboto_light"
                android:text="  User login"
                android:textColor="#00B8D4" />


            <TextView
                android:id="@+id/c_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_light"
                android:text="Register as Employee"
                android:textAlignment="center"
                android:textColor="#304FFE" />


            <TextView
                android:id="@+id/c_register2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_light"
                android:text="Register as User"
                android:textAlignment="center"
                android:textColor="#304FFE" />

            <TextView
            android:id="@+id/C_adminlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_light"
            android:text="ADMIN LOGIN"
            android:textAlignment="center"
            android:textColor="#2962FF" />



    </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
